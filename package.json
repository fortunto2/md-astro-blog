{
  "name": "blog2",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "deploy": "pnpm build && wrangler pages deploy dist",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint . --ext .ts,.astro,.js,.mjs",
    "lint:fix": "eslint . --ext .ts,.astro,.js,.mjs --fix",
    "prepare": "husky install",
    "r2:put": "wrangler r2 object put",
    "r2:delete": "wrangler r2 object delete"
  },
  "lint-staged": {
    "*.{ts,astro,js,mjs}": [
      "eslint --fix",
      "git add"
    ],
    "src/lib/*.{ts,js}": [
      "vitest run --reporter=verbose --run"
    ],
    "src/pages/api/*.{ts,js}": [
      "vitest run --reporter=verbose --run"
    ]
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.8",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.9",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.1.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.18",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "vitest": "^3.2.4"
  }
}